<%- include('../includes/head') %>
<body>
    <%- include('../includes/navigation') %>
    <main>
        <h1>Our Products</h1>
        <% if (prods && prods.length > 0) { %>
            <div class="grid">
                <% prods.forEach(prod => { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= prod.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="<%= prod.imageUrl%>" alt="A Book">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$<%= prod.price%></h2>
                            <p class="product__description"> <%= prod.description%></p>
                        </div>
                        <div class="card__actions">
                            <a href="/products/<%= prod._id %>" class="btn">Detail</a>
                            <form action="/cart" method="POST">
                                <input type="hidden" name="productId" value="<%= prod._id %>">
                                <button class="btn" type="submit">Add to Cart</button>
                            </form>
                        </div>
                    </article>
                <% }); %>
            </div>
        <% } else { %>
            <h1>No product found</h1>
        <% } %>
    </main>

</body>

</html>
