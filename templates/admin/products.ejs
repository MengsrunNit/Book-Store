<%- include('../includes/head') %>
<body>
    <%- include('../includes/navigation') %>
    <main>
        <h1>Our Products</h1>
        <% if (prods && prods.length > 0) { %>
            <div class="grid">
                <% prods.forEach(prod => { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= prod.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="<%= prod.imageUrl%>" alt="A Book">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$<%= prod.price%></h2>
                            <p class="product__description"> <%= prod.description%></p>
                           <%=prod.price%>
                        </div>
                        <div class="card__actions">
                            <a class="btn" href="/admin/edit-product/<%= prod.id %>?editMode=true">Edit</a>
                            <form action="/admin/delete-product" method="POST">
                                <input type="hidden" value="<%= prod.id %>" name="productId">
                                <button class="btn" type="submit">Delete</button>
                            </form>
                        </div>
                    </article>
                <% }); %>
            </div>
        <% } else { %>
            <h1>No product found</h1>
        <% } %>
    </main>

</body>

</html>
